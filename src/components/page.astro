---
import { Font } from "astro:assets";
import Particles from "./particles.astro";

interface Props {
  title?: string;
  description?: string;
  particles?: boolean;
  background?: string;
}

const {
  title = "Keepsake",
  description = "What does NieR mean to you? Leave a message for the creators and voices behind the franchise. Your words will be shared with them after the January 11, 2026 concert.",
  particles = false,
  background = "#28241e",
} = Astro.props;
---

<html lang="en" style={`background-color: ${background};`}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <Font cssVariable="--font-nunito" preload />
    <Font cssVariable="--font-averia-libre" preload />
    <Font cssVariable="--font-zen-maru-gothic" preload />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="og:title" content={title} />
    <meta name="og:description" content={description} />
  </head>
  <body>
    {particles ? <Particles /> : null}
    <slot />
  </body>
</html>

<style>
  body {
    margin: 0;
    font-family: var(--font-nunito);
    font-weight: 700;
    color: #f5f5f5;

    display: flex;
  }
</style>

<style is:global>
  p,
  ul,
  ol,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
    padding: 0;
    line-height: 1;
  }

  :root {
    --color-text: #f5f5f5;
    --color-background: #28241e;
  }

  button {
    font-family: inherit;
    font-weight: inherit;
  }

  a {
    text-decoration: none;
    color: inherit;
  }
</style>
