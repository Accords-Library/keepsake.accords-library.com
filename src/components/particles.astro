<div id="particles-container"></div>

<style>
  #particles-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }
</style>

<script>
  const container = document.getElementById("particles-container");
  if (!container) throw new Error("Container not found");

  const particleLifetime = 8000; // ms
  const spawnInterval = 200; // ms
  const movementMultiplier = 2;
  const transitionDuration = 1500; // ms

  function createParticle() {
    const particle = document.createElement("div");
    particle.className = "particle";

    // Random starting position
    const startX = Math.random() * container!.clientWidth;
    const startY = Math.random() * container!.clientHeight;

    const size = 1 + Math.random() * 4;

    // Random movement direction and distance
    const angle = Math.random() * Math.PI * 2;
    const distance = 50 + Math.random() * 100 * movementMultiplier; // 50-150px movement
    const endX = startX + Math.cos(angle) * distance;
    const endY = startY + Math.sin(angle) * distance;

    particle.style.position = "absolute";
    particle.style.left = startX + "px";
    particle.style.top = startY + "px";
    particle.style.width = `${size}px`;
    particle.style.height = `${size}px`;
    particle.style.backgroundColor = "white";
    particle.style.opacity = "0";
    particle.style.borderRadius = "50%";
    particle.style.pointerEvents = "none";

    particle.style.transitionProperty = "opacity, transform, left, top";
    particle.style.transitionDuration = `${transitionDuration}ms, ${transitionDuration}ms, ${particleLifetime}ms, ${particleLifetime}ms`;
    particle.style.transitionTimingFunction =
    "ease-in-out, ease-in-out, linear, linear";
    
    particle.style.filter = "blur(1px)";

    // Mount
    container!.appendChild(particle);

    // Entering animation
    setTimeout(() => {
      particle.style.opacity = "1";
      particle.style.left = endX + "px";
      particle.style.top = endY + "px";
    }, 100);

    // Exiting animation
    setTimeout(() => {
      particle.style.opacity = "0";
    }, particleLifetime - transitionDuration);

    // Unmount
    setTimeout(() => {
      container!.removeChild(particle);
    }, particleLifetime);
  }

  setInterval(createParticle, spawnInterval);
</script>
