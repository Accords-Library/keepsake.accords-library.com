---
import NAButton from "@/components/na/button.astro";

interface Props {
  id?: string;
  name: string;
  text: string;
  footnote?: string;
  options: { text: string; href?: string; name?: string }[];
}

const { id, name, text, footnote, options } = Astro.props;
---

<div id={id} class="prompt">
  <div class="header">
    <div id="name">
      {name}
      <div class="line"></div>
      <div class="line"></div>
    </div>
    <div class="options">
      {
        options.map(({ text, href, name }) =>
          href ? (
            <a href={href}>
              <NAButton text={text} type="menu" name={name} />
            </a>
          ) : (
            <NAButton text={text} type="menu" name={name} />
          ),
        )
      }
    </div>
  </div>
  <div id="text">
    <p>{text}</p>
    {
      Array.from({ length: 4 }).map(() => (
        <div
          class="circle"
          style={`
            --animation-delay: ${-Math.random() * 10}s;
            --animation-duration: ${20 + Math.random() * 10}s;
            `}
        />
      ))
    }
    {
      Array.from({ length: 4 }).map(() => (
        <div
          class="line"
          style={`
                  --animation-delay: ${-Math.random() * 10}s;
                  --animation-duration: ${20 + Math.random() * 10}s;
                  `}
        />
      ))
    }
    <div class="options">
      {
        options.map(({ text, href, name }) =>
          href ? (
            <a href={href}>
              <NAButton text={text} name={name} />
            </a>
          ) : (
            <NAButton text={text} name={name} />
          ),
        )
      }
    </div>
    { footnote && <p class="footnote">{footnote}</p> }
  </div>
</div>

<style>
  .prompt {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    --decoration-opacity: 0.2;

    @media (max-width: 900px) {
      --decoration-opacity: 0.1;
    }

    & > .header {
      display: flex;
      gap: 5rem;
      justify-content: space-between;
      align-items: flex-end;

      & > .options {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;

        width: 100%;
        max-width: 40rem;
        padding-right: 2vw;

        @media (max-width: 700.5px) {
          display: none;
        }
      }
    }

    #name {
      background-color: #22221e;
      padding: 1rem;
      padding-left: 16vw;
      padding-right: calc(0.8em + 2vw);
      position: relative;

      font-size: clamp(100%, 4vw, 120%);
      letter-spacing: 5%;

      /* Dotted background */
      background-image:
        linear-gradient(to left, transparent, #22221e 80%),
        radial-gradient(#000000 1px, transparent 1px),
        radial-gradient(#000000 1px, transparent 1px);
      background-size:
        100% 100%,
        10px 10px,
        10px 10px;
      background-position:
        center,
        0 0,
        5px 5px;
      background-color: #22221e;
      border: 3px solid #22221e;

      & > .line {
        position: absolute;
        height: 2px;
        background-color: #f5f5f5;
        opacity: var(--decoration-opacity);
        left: 0;

        &:nth-child(1) {
          top: 30%;
          width: 70%;
        }

        &:nth-child(2) {
          bottom: 20%;
          width: 95%;
        }
      }
    }

    #text {
      min-height: 10em;
      padding: max(1rem, 4vw);
      padding-inline: clamp(1rem, 30vw - 120px, 20vw);
      padding-top: 3rem;
      overflow: hidden;

      &:has(.footnote) {
        padding-bottom: 1em;
      }

      position: relative;
      display: flex;
      gap: 3rem;
      flex-direction: column;
      place-content: center;
      place-items: center;

      /* Dotted background */
      background-image:
        linear-gradient(transparent, #22221e 80%),
        radial-gradient(#000000 1px, transparent 1px),
        radial-gradient(#000000 1px, transparent 1px);
      background-size:
        100% 100%,
        10px 10px,
        10px 10px;
      background-position:
        center,
        0 0,
        5px 5px;
      background-color: #22221e;
      border: 3px solid #22221e;

      @media (min-width: 700.5px) {
        padding-block: 3rem;
      }

      > .footnote {
        font-size: 80%;
        letter-spacing: 5%;
        line-height: 1.3;
        white-space: pre-line;
        width: 100%;
        text-align: center;
        opacity: 0.5;

        @media (max-width: 700.5px) {
          white-space: collapse;
        }
      }

      > p {
        font-size: clamp(100%, 4vw, 120%);
        letter-spacing: 5%;
        line-height: 1.3;
        white-space: pre-line;
        width: 100%;
      }

      > .options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-self: stretch;

        @media (min-width: 700.5px) {
          display: none;
        }
      }
    }

    .line {
      position: absolute;
      height: 2px;
      background-color: #f5f5f5;
      opacity: var(--decoration-opacity);

      animation-name: circle-animation;
      animation-duration: var(--animation-duration);
      animation-iteration-count: infinite;
      animation-timing-function: ease-in-out;
      animation-delay: var(--animation-delay);

      touch-action: none;
      user-select: none;
      pointer-events: none;

      &:nth-of-type(5) {
        top: 30%;
        left: -10%;
        rotate: 25deg;
        width: 28%;
      }

      &:nth-of-type(6) {
        top: 40%;
        left: -10%;
        rotate: 25deg;
        width: 30%;
      }

      &:nth-of-type(7) {
        bottom: 10%;
        right: -10%;
        rotate: 25deg;
        width: 28%;
      }

      &:nth-of-type(8) {
        bottom: 25%;
        right: -10%;
        rotate: 25deg;
        width: 32%;
      }
    }

    .circle {
      position: absolute;
      width: 30vh;
      height: 30vh;
      border-radius: 50%;
      border: 2px solid #d2cbad;
      opacity: var(--decoration-opacity);

      animation-name: circle-animation;
      animation-duration: var(--animation-duration);
      animation-iteration-count: infinite;
      animation-timing-function: ease-in-out;
      animation-delay: var(--animation-delay);

      touch-action: none;
      user-select: none;
      pointer-events: none;

      &:nth-of-type(1) {
        bottom: 3vh;
        left: -10vh;
      }

      &:nth-of-type(2) {
        bottom: 3vh;
        left: -10vh;
        scale: 0.9;
      }

      &:nth-of-type(3) {
        top: 3vh;
        right: -10vh;
      }

      &:nth-of-type(4) {
        top: 3vh;
        right: -10vh;
        scale: 0.9;
      }
    }
  }

  @keyframes circle-animation {
    0% {
      translate: 0 0;
    }
    10% {
      translate: 5% 5%;
    }
    20% {
      translate: 8% 10%;
    }
    30% {
      translate: 3% 5%;
    }
    40% {
      translate: 6% 8%;
    }
    50% {
      translate: 5% 5%;
    }
    60% {
      translate: 4% 6%;
    }
    70% {
      translate: 5% 5%;
    }
    80% {
      translate: 2% 4%;
    }
    90% {
      translate: 1% 2%;
    }
    100% {
      translate: 0 0;
    }
  }
</style>
