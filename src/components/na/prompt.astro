---
import NAButton from "@/components/na/button.astro";

interface Props {
  name: string;
  text: string;
  options: { text: string; href?: string; id?: string }[];
  id?: string;
}

const { name, text, options, id } = Astro.props;
---

<div class="prompt" id={id}>
  <div id="options">
    {
      options.map(({ text, href, id }) =>
        href ? (
          <a href={href}>
            <NAButton text={text} type="menu" id={id} />
          </a>
        ) : (
          <NAButton text={text} type="menu" id={id} />
        ),
      )
    }
  </div>
  <div id="name">
    {name}
    <div class="line"></div>
    <div class="line"></div>
  </div>
  <div id="text">
    {text}
    {
      Array.from({ length: 4 }).map((_, index) => (
        <div
          class="circle"
          style={`
            --animation-delay: ${-Math.random() * 10}s;
            --animation-duration: ${20 + Math.random() * 10}s;
            `}
        />
      ))
    }
    {
      Array.from({ length: 4 }).map((_, index) => (
        <div
          class="line"
          style={`
                  --animation-delay: ${-Math.random() * 10}s;
                  --animation-duration: ${20 + Math.random() * 10}s;
                  `}
        />
      ))
    }
  </div>
</div>

<style>
  .prompt {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    --decoration-opacity: 0.2;

    @media (max-width: 900px) {
      --decoration-opacity: 0.1;
    }

    #options {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      align-self: flex-end;

      width: 80vw;
      max-width: 40rem;
      padding-right: 2vw;

      margin-bottom: clamp(-5rem, -60vw + 40rem, 5rem);
    }

    #name {
      background-color: #22221e;
      padding: 1rem;
      width: fit-content;
      padding-left: 16vw;
      padding-right: 2vw;
      position: relative;

      font-size: 120%;
      letter-spacing: 5%;
      color: #f5f5f5;

      /* Dotted background */
      background-image:
        linear-gradient(to left, transparent, #22221e 80%),
        radial-gradient(#000000 1px, transparent 1px),
        radial-gradient(#000000 1px, transparent 1px);
      background-size:
        100% 100%,
        10px 10px,
        10px 10px;
      background-position:
        center,
        0 0,
        5px 5px;
      background-color: #22221e;
      border: 3px solid #22221e;

      & > .line {
        position: absolute;
        height: 2px;
        background-color: #f5f5f5;
        opacity: var(--decoration-opacity);
        left: 0;

        &:nth-child(1) {
          top: 30%;
          width: 70%;
        }

        &:nth-child(2) {
          bottom: 20%;
          width: 95%;
        }
      }
    }

    #text {
      padding-top: 3rem;
      min-height: 16vh;
      padding-bottom: 1em;
      padding-inline: 20vw;
      overflow: hidden;

      font-size: 120%;
      letter-spacing: 5%;
      color: #f5f5f5;
      line-height: 1.6;
      position: relative;
      white-space: pre-line;

      /* Dotted background */
      background-image:
        linear-gradient(transparent, #22221e 80%),
        radial-gradient(#000000 1px, transparent 1px),
        radial-gradient(#000000 1px, transparent 1px);
      background-size:
        100% 100%,
        10px 10px,
        10px 10px;
      background-position:
        center,
        0 0,
        5px 5px;
      background-color: #22221e;
      border: 3px solid #22221e;
    }

    .line {
      position: absolute;
      height: 2px;
      background-color: #f5f5f5;
      opacity: var(--decoration-opacity);

      animation-name: circle-animation;
      animation-duration: var(--animation-duration);
      animation-iteration-count: infinite;
      animation-timing-function: ease-in-out;
      animation-delay: var(--animation-delay);

      &:nth-child(5) {
        top: 30%;
        left: -10%;
        rotate: 25deg;
        width: 28%;
      }

      &:nth-child(6) {
        top: 40%;
        left: -10%;
        rotate: 25deg;
        width: 30%;
      }

      &:nth-child(7) {
        bottom: 10%;
        right: -10%;
        rotate: 25deg;
        width: 28%;
      }

      &:nth-child(8) {
        bottom: 25%;
        right: -10%;
        rotate: 25deg;
        width: 32%;
      }
    }

    .circle {
      position: absolute;
      width: 30vh;
      height: 30vh;
      border-radius: 50%;
      border: 2px solid #d2cbad;
      opacity: var(--decoration-opacity);

      animation-name: circle-animation;
      animation-duration: var(--animation-duration);
      animation-iteration-count: infinite;
      animation-timing-function: ease-in-out;
      animation-delay: var(--animation-delay);

      &:nth-child(1) {
        bottom: 3vh;
        left: -10vh;
      }

      &:nth-child(2) {
        bottom: 3vh;
        left: -10vh;
        scale: 0.9;
      }

      &:nth-child(3) {
        top: 3vh;
        right: -10vh;
      }

      &:nth-child(4) {
        top: 3vh;
        right: -10vh;
        scale: 0.9;
      }
    }
  }

  @keyframes circle-animation {
    0% {
      translate: 0 0;
    }
    10% {
      translate: 5% 5%;
    }
    20% {
      translate: 8% 10%;
    }
    30% {
      translate: 3% 5%;
    }
    40% {
      translate: 6% 8%;
    }
    50% {
      translate: 5% 5%;
    }
    60% {
      translate: 4% 6%;
    }
    70% {
      translate: 5% 5%;
    }
    80% {
      translate: 2% 4%;
    }
    90% {
      translate: 1% 2%;
    }
    100% {
      translate: 0 0;
    }
  }
</style>
