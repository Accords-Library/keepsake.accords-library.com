---
import { Font } from "astro:assets";
import Particles from "./particles.astro";

interface Props {
  title?: string;
  particles?: boolean;
  background?: string;
}

const { title = "Keepsake", particles = false, background = "#28241e" } = Astro.props;
---

<html lang="en" style={`background-color: ${background};`}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <Font cssVariable="--font-nunito" preload />
    <Font cssVariable="--font-averia-libre" preload />
    <title>{title}</title>
  </head>
  <body>
    {particles ? <Particles /> : null}
    <slot />
  </body>
</html>

<style>
  body {
    margin: 0;
    position: relative;
    overflow-y: auto;
    overflow-x: hidden;
    min-height: 100dvh;
    font-family: var(--font-nunito);
    font-weight: 700;
  }

  html {
    color: #f5f5f5;
  }
</style>

<style is:global>
  p,
  ul,
  ol,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
    padding: 0;
    line-height: 1;
  }

  :root {
    --color-text: #f5f5f5;
    --color-background: #28241e;
  }

  button {
    font-family: inherit;
    font-weight: inherit;
  }

  a {
    text-decoration: none;
    color: inherit;
  }
</style>
